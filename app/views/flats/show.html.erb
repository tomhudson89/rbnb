<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @flat.photos.first.key %>);">
  <div class="container">
    <button type="button" class="btn btn-danger float-right">Go to my profile</button>
  </div>
</div>
<% if @flat.user_id == current_user.id %>
  <div class="main-container">
    <div class="info">
      <h1 class="pb-4">Congratulations! Your tiny house has been added!</h1>
      <br>
      <h2 class="pb-4"><%= @flat.title %></h2>
      <br>
      <p><%= @flat.description %></p>
      <br>
      <p><%= @flat.address %></p>
    </div>
    <div class="booker">
      <div class="container">
        <p> <strong>Sleeping arrangements</strong></p>
        <div class="d-flex">
          <i></i>
          <p>Number of beds: <%= @flat.beds %> </p>
        </div>
        <div class="d-flex">
          <i></i>
          <p>Number of bedrooms: <%= @flat.bedrooms %> </p>
        </div>
        <div class="d-flex border-bottom">
          <i></i>
          <p>>Max number of guests: <%= @flat.guests %> </p>
        </div>
        <p class="pt-3"> <strong>Pricing</strong></p>
        <div class="d-flex">
          <i></i>
          <p>Price per night: $<%= @flat.price_per_night %></p>
        </div>
      </div>
    </div>
  </div>
  <% else %>
    <div class="main-container">
      <div class="info">
        <h1 class="pb-4">Congratulations! Your tiny house has been added!</h1>
        <br>
        <h2 class="pb-4"><%= @flat.title %></h2>
        <br>
        <p><%= @flat.description %></p>
        <br>
        <p><%= @flat.address %></p>
      </div>
      <div class="booker">
          <%= render 'bookings/form', booking: Booking.new, flat: @flat %>
      </div>
    </div>
  <% end %>
