      <div class="col-md-6">
        <div class="search-form">
          <h1>Enter your flat details here</h1>
          <%= simple_form_for @flat do |f| %>
            <%= f.input :title %>
            <%= f.input :description, placeholder: "Write something sexy" %>
            <%= f.input :address %>
            <div class="form-row fg justify-content-between">
              <div class="col-md-4">
                <%= f.input :guests %>
              </div>
              <div class="col-md-4">
                <%= f.input :bedrooms %>
              </div>
              <div class="col-md-4">
                <%= f.input :beds %>
              </div>
            </div>
            <%= f.input :price_per_night %>
            <%= f.input :photos, as: :file, input_html: {multiple: true} %>
            <%= f.submit "Add my tiny house", class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
